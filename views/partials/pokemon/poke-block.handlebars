
<div class="block mx-auto">
    {{!-- Disabled for testing until deployment. --}}
    <img src="{{pokemon_front_sprite_url}}" class="img-fluid justify-content-center" alt="Responsive image">
    {{#if pokemon_nickName}}
        <h4>{{pokemon_nickName}}</h4>
    {{else}}
        <h4>{{pokemon_name}}</h4>
    {{/if}}

    {{#unless caught}}
        <button class="catch-pokemon btn btn-success" data-id="{{id}}" data-pokeid="{{pokemon_id}}" data-newcaught="1">Throw Pokeball</button>
    {{/unless}}
</div>

