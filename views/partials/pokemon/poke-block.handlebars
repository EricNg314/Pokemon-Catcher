
<div class="block mx-auto">
    {{!-- Disabled for testing until deployment. --}}
    <img src="{{pokemon_front_sprite_url}}" class="img-fluid" alt="Pokemon Image for id {{pokemon_id}}">
    {{#if pokemon_nickName}}
        <h5>{{pokemon_nickName}}</h5>
    {{else}}
        <h5>{{pokemon_name}}</h5>
    {{/if}}

    {{#unless caught}}
    <div>
        <img id="pokeball-{{id}}" src="/assets/img/Pokeball.png" class="img-fluid pokeball-icon animated-hover infinite rotate" alt="Pokeball">
        <button class="catch-pokemon btn btn-success animated-hover infinite pulse" data-id="{{id}}" data-pokeid="{{pokemon_id}}" data-newcaught="1">Throw Pokeball</button>
    </div>
    {{/unless}}
</div>

