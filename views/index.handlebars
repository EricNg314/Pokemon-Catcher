

<div class="container">

    <div class="jumbotron bg-white-transparent">
        <div class="d-block">
        
            <h1 class="display-4 align-middle">
                <img src="/assets/img/Pokeball.png" class="img-fluid pokeball-icon alignment" alt="Pokeball"> 
                Ready to be a POKEMON MASTER?!
                <img src="/assets/img/Pokeball.png" class="img-fluid pokeball-icon alignment" alt="Pokeball">
            </h1>
        
        </div>
        <hr class="my-4">
        <h3>Find a Wild Pokemon!</h3>
    <form class="create-form">
        <div class="form-group">
            <label for="poke">Call out a name and a pokemon might appear!</label>
            <input type="text" id="poke" name="nickname">
            <button class="btn btn-primary" type="submit">Find Pokemon</button>
        </div>
    </form>
    </div>

    <br>

    <div class="d-flex">
        <div class="card p-4 bg-white-transparent col-md-6">
            <h3 class="text-center">Wild Pokemon</h3>
            {{#each pokemon}} 
                {{!-- {{#if appeared}}  --}}
                    {{#unless caught}}
                        {{>pokemon/poke-block}} 
                    {{/unless}}
                {{!-- {{/if}}  --}}
            {{/each}}
        </div>
        <div class="card p-4 bg-white-transparent col-md-6">
            <h3 class="text-center">Caught</h3>
            {{#each pokemon}} 
                {{#if caught}} 
                    {{>pokemon/poke-block}} 
                {{/if}} 
            {{/each}}
        </div>
    </div>
</div>